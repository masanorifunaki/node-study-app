extends layout

block content
  p #{title}
  if(messageList)
    div
      ul
        each messageItem in messageList
          li
            div
              p #{messageItem.message}
              p #{messageItem.user_name} #{messageItem.created_at}
              if (messageItem.image_path)
                a(href=`${messageItem.image_path}` style=`background-image: url(${messageItem.image_path})`).message__image
  form(action=`/boards/${board.board_id}`, method="post" enctype="multipart/form-data")
    input(type="text" name="message" required)
    button(type="submit") 投稿
    div
      input(type="file" name="image_file")
  if(typeof user !== 'undefined')
    p #{user.user_name} さんとしてログインしています
  a(href="/") TOPへ戻る